{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "setup": "firebase functions:config:set gateways.mercadopago.access_token=`grep '^MP_SECRET_TOKEN=' ../.env | cut -d= -f2 | tr -d '\"'`",
    "emulator": "yarn build && firebase emulators:start",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "dist/functions/src/index.js",
  "dependencies": {
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.0",
    "mercadopago": "^1.5.14"
  },
  "devDependencies": {
    "@types/mercadopago": "^1.5.8",
    "typescript": "^4.9.4"
  },
  "private": true
}
